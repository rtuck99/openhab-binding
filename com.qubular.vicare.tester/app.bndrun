-standalone: \
target/index.xml;name="app"

-resolve.effective: active

-runfw: org.apache.felix.framework

-runee: JavaSE-17

-runrequires: \
    bnd.identity;id='com.qubular.vicare-osgi',\
    bnd.identity;id='com.qubular.vicare-osgi-tests',\
    bnd.identity;id='com.qubular.glowmarkt-osgi',\
    bnd.identity;id='com.qubular.glowmarkt-osgi-tests',\
    bnd.identity;id='org.ops4j.pax.logging.pax-logging-log4j2'

-runrequires.junit: \
    bnd.identity;id='biz.aQute.tester.junit-platform',\
    bnd.identity;id='junit-jupiter-engine'

-tester: biz.aQute.tester.junit-platform

-runvm.servletConfig: -Dorg.osgi.service.http.port=${org.osgi.service.http.port}
-runvm.debug: '-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=8000'

-runproperties.logging: org.ops4j.pax.logging.property.file=${project.basedir}/log4j2.xml,\
	org.ops4j.pax.logging.DefaultServiceLog.level=INFO,\
	tester.dir=target/test-reports

# We would like to use the slf4j-api and implementation provided by pax-logging
-runblacklist.slf4j: \
	bnd.identity;id='slf4j.api'

-runvm.java9plus: \
	--add-opens=java.base/java.io=ALL-UNNAMED,\
	--add-opens=java.base/java.lang=ALL-UNNAMED,\
	--add-opens=java.base/java.lang.reflect=ALL-UNNAMED,\
	--add-opens=java.base/java.net=ALL-UNNAMED,\
	--add-opens=java.base/java.security=ALL-UNNAMED,\
	--add-opens=java.base/java.text=ALL-UNNAMED,\
	--add-opens=java.base/java.time=ALL-UNNAMED,\
	--add-opens=java.base/java.util=ALL-UNNAMED,\
	--add-opens=java.desktop/java.awt.font=ALL-UNNAMED,\
	--add-opens=java.naming/javax.naming.spi=ALL-UNNAMED,\
	--add-opens=java.rmi/sun.rmi.transport.tcp=ALL-UNNAMED

# auto-generated by build
-runbundles: \
	biz.aQute.tester.junit-platform;version='[6.3.1,6.3.2)',\
	junit-jupiter-api;version='[5.8.1,5.8.2)',\
	junit-jupiter-engine;version='[5.8.1,5.8.2)',\
	junit-platform-commons;version='[1.8.1,1.8.2)',\
	junit-platform-engine;version='[1.8.1,1.8.2)',\
	junit-platform-launcher;version='[1.8.1,1.8.2)',\
	org.opentest4j;version='[1.2.0,1.2.1)',\
	org.osgi.util.function;version='[1.1.0,1.1.1)',\
	org.osgi.util.promise;version='[1.2.0,1.2.1)',\
	org.osgi.service.http;version='[1.2.2,1.2.3)',\
	org.apache.commons.lang3;version='[3.12.0,3.12.1)',\
	junit-jupiter-params;version='[5.8.1,5.8.2)',\
	com.google.gson;version='[2.9.1,2.9.2)',\
	org.apache.felix.http.jetty;version='[4.2.10,4.2.11)',\
	org.apache.felix.http.servlet-api;version='[1.2.0,1.2.1)',\
	org.apache.felix.scr;version='[2.2.4,2.2.5)',\
	org.ops4j.pax.logging.pax-logging-api;version='[2.2.0,2.2.1)',\
	org.ops4j.pax.logging.pax-logging-log4j2;version='[2.2.0,2.2.1)',\
	org.osgi.service.component;version='[1.5.0,1.5.1)',\
	com.qubular.glowmarkt-osgi;version='[4.0.1,4.0.2)',\
	com.qubular.glowmarkt-osgi-tests;version='[4.0.1,4.0.2)',\
	com.qubular.vicare-osgi;version='[4.0.1,4.0.2)',\
	com.qubular.vicare-osgi-tests;version='[4.0.1,4.0.2)'
